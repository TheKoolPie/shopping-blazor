<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Shopping</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<ul class="nav flex-column">
    <li class="nav-item px-3">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="oi oi-person"></span>
            <AuthorizeView>
                <Authorized>@context.User.Identity.Name</Authorized>
                <NotAuthorized>Account</NotAuthorized>
            </AuthorizeView>
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <AuthorizeView>
                <Authorized>
                    <NavLink class="nav-link text-dark" href="/account/manager" Match="NavLinkMatch.All">
                        <span class="oi oi-spreadsheet" aria-hidden="true"></span> Manage
                    </NavLink>
                    <div class="dropdown-divider"></div>
                    <NavLink class="nav-link text-dark" href="/account/logout" Match="NavLinkMatch.All">
                        <span class="oi oi-account-logout" aria-hidden="true"></span> Log out
                    </NavLink>
                </Authorized>
                <NotAuthorized>
                    <NavLink class="nav-link text-dark" href="/account/login" Match="NavLinkMatch.All">
                        <span class="oi oi-account-login" aria-hidden="true"></span> Log in
                    </NavLink>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </li>
</ul>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/shopping-list/details/" Match="NavLinkMatch.All">
                <span class="oi oi-clock" aria-hidden="true"></span> Today
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/shopping-list/" Match="NavLinkMatch.All">
                <span class="oi oi-list" aria-hidden="true"></span> Lists
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/product" Match="NavLinkMatch.All">
                <span class="oi oi-briefcase" aria-hidden="true"></span> Products
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/product/category" Match="NavLinkMatch.All">
                <span class="oi oi-clipboard" aria-hidden="true"></span> Categories
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="https://github.com/TheKoolPie/shopping-blazor" Match="NavLinkMatch.All">
                <span class="oi oi-info" aria-hidden="true"></span> About
            </NavLink>
        </li>

    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}
