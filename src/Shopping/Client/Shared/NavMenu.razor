<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Shopping</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <AuthorizeView>
                <NotAuthorized>
                    <NavLink class="nav-link" href="/account/login" Match="NavLinkMatch.All">
                        <span class="oi oi-account-login" aria-hidden="true"></span> Log in
                    </NavLink>
                </NotAuthorized>
                <Authorized>
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="oi oi-person"></span>
                        @context.User.Identity.Name
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <NavLink class="nav-link text-dark" href="/account/manage" Match="NavLinkMatch.All">
                            <span class="oi oi-spreadsheet" aria-hidden="true"></span> Manage
                        </NavLink>
                        <NavLink class="nav-link text-dark" href="/groups" Match="NavLinkMatch.Prefix">
                            <span class="oi oi-people" aria-hidden="true"></span> Groups
                        </NavLink>
                        <div class="dropdown-divider"></div>
                        <NavLink class="nav-link text-dark" href="/account/logout" Match="NavLinkMatch.All">
                            <span class="oi oi-account-logout" aria-hidden="true"></span> Log out
                        </NavLink>
                    </div>
                </Authorized>
            </AuthorizeView>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/lists" Match="NavLinkMatch.Prefix">
                <span class="oi oi-list" aria-hidden="true"></span> Lists
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/store" Match="NavLinkMatch.All">
                <span class="oi oi-cart" aria-hidden="true"/> Store
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/product" Match="NavLinkMatch.All">
                <span class="oi oi-briefcase" aria-hidden="true"></span> Products
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/product/category" Match="NavLinkMatch.All">
                <span class="oi oi-clipboard" aria-hidden="true"></span> Categories
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}
