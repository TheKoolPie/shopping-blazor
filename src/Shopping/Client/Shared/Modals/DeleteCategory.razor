@inject IModalService ModalService


<div class="row">
    <div class="col-sm-1">
        <span class="oi oi-warning" style="color:#F7CA35;font-size:32pt;" />
    </div>
    <div class="col">
        <h4>Are you sure you want to delete the category @CategoryName?</h4>
    </div>
</div>

<div class="row">
    <div class="col">
        <p>
            Be aware that with this action all products, assigned to this category, will be deleted as well.
            This will also effect every shopping list item, which has a product of this category assigned to it.
            This <strong>cannot</strong> be reverted!
        </p>
    </div>
</div>
<hr />
<div class="row">
    <div class="col">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" @onchange="@(()=>IsDeleteActive = !IsDeleteActive)"
                   id="categoryDeleteCheck">
            <label class="form-check-label" for="categoryDeleteCheck">I am sure.</label>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        @if (IsDeleteActive)
        {
            <button class="btn btn-danger" type="button" @onclick="OnDeleteClick">
                <span class="oi oi-trash" /> Delete
            </button>
        }
    </div>
    <div class="col">
        <button class="btn btn-secondary" type="button" @onclick="BlazoredModal.Cancel">
            Cancel
        </button>
    </div>
</div>



@code {
    [CascadingParameter]
    BlazoredModalInstance BlazoredModal { get; set; }

    [Parameter]
    public string CategoryName { get; set; }

    private bool IsDeleteActive = false;

    private void OnDeleteClick()
    {
        BlazoredModal.Close(ModalResult.Ok<bool>(true));
    }
}
